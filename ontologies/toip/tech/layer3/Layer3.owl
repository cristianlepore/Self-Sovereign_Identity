<?xml version="1.0"?>
<rdf:RDF xmlns="http://example.org/techLayer3#"
      xml:base="http://example.org/techLayer3"
      xmlns:rdf="http://www.w3.org/1999/02/22-rdf-syntax-ns#"
      xmlns:owl="http://www.w3.org/2002/07/owl#"
      xmlns:rdfs="http://www.w3.org/2000/01/rdf-schema#"
      xmlns:xsd="http://www.w3.org/2001/XMLSchema#">
      
      <!-- ********************************************************************************************* -->
      <!-- *******************  All rights reserved to Cristian Lepore ********************************* -->
      <!-- ************************* Tech layer 3 of the ToIP model ************************************ -->
      <!-- ********************************************************************************************* -->  

      <owl:Ontology rdf:about="http://example.org/techLayer3#">
            <rdfs:comment>Ontology representing the tech Layer 3 of the ToIP stack.</rdfs:comment>
      </owl:Ontology>



      <!-- ******************************* -->
      <!-- ********* Class *************** -->
      <!-- ******************************* -->

      <owl:Class rdf:about="techLayer3#VC">
            <rdfs:label>Verifiable credential</rdfs:label>
            <rdfs:comment>A standard data model and representation format for cryptographically-verifiable digital credentials as defined by the W3C Verifiable Credentials Data Model Specification.</rdfs:comment>
            <rdfs:subClassOf rdf:resource="techLayer3#Credential"/>
            <rdfs:isDefinedBy rdf:resource="https://glossary.trustoverip.org/#term:verifiable-credential"/>
      </owl:Class>

      <owl:Class rdf:about="techLayer3#TrustTaskProtocol">
            <rdfs:label>Trust Task Protocol</rdfs:label>
            <rdfs:comment>A ToIP Layer 3 protocol that implements a specific trust task on behalf of a trust application operating at ToIP Layer 4.</rdfs:comment>
            <rdfs:isDefinedBy rdf:resource="https://glossary.trustoverip.org/#term:trust-task-protocol"/>
      </owl:Class>

      <owl:Class rdf:about="techLayer3#TrustRegistryProtocol">
            <rdfs:label>Trust registry protocol</rdfs:label>
            <rdfs:comment>The open standard trust task protocol defined by the ToIP Foundation to perform the trust task of querying a trust registry. The ToIP Trust Registry Protocol operates at Layer 3 of the ToIP stack.</rdfs:comment>
            <rdfs:subClassOf rdf:resource="techLayer3#TrustTaskProtocol"/>
            <rdfs:isDefinedBy rdf:resource="https://glossary.trustoverip.org/#term:toip-trust-registry-protocol"/>
      </owl:Class>

      <owl:Class rdf:about="techLayer3#MessagingProtocol">
            <rdfs:label>Messaging protocol</rdfs:label>
            <rdfs:comment>Messaging protocol ensures confidential and authenticated communication between agents.</rdfs:comment>
            <rdfs:subClassOf rdf:resource="techLayer3#TrustTaskProtocol"/>
            <rdfs:isDefinedBy rdf:resource="https://trustoverip.github.io/TechArch/"/>
      </owl:Class>




      <!-- ******************************* -->
      <!-- ********* Attribute *********** -->
      <!-- ******************************* -->




      <!-- ******************************* -->
      <!-- ********* Relation ************ -->
      <!-- ******************************* -->

      <owl:ObjectProperty rdf:about="techLayer3#containsAttribute">
            <rdfs:domain rdf:resource="techLayer3#Proof"/>
            <rdfs:range rdf:resource="techLayer3#Attribute"/>
            <rdfs:label>contains</rdfs:label>
      </owl:ObjectProperty>

      <owl:ObjectProperty rdf:about="techLayer3#issuanceCredential">
            <rdfs:domain rdf:resource="techLayer3#CredentialExchangeProtocol"/>
            <rdfs:range rdf:resource="techLayer3#Credential"/>
            <rdfs:label>issuance</rdfs:label>
            <rdfs:comment>The action of an issuer producing and transmitting a digital credential to a holder. A holder may request issuance by submitting an issuance request.</rdfs:comment>
            <rdfs:isDefinedBy rdf:resource="https://glossary.trustoverip.org/#term:issuance"/>
      </owl:ObjectProperty>



      <!-- ******************************* -->
      <!-- ******** Constraints ********** -->
      <!-- ******************************* -->

      <!-- Issuer, holder, verifier are disjoint -->
      <owl:AllDisjointClasses>
            <owl:members rdf:parseType="Collection">
                  <rdf:Description rdf:about="techLayer3#Issuer"/>
                  <rdf:Description rdf:about="techLayer3#Holder"/>
                  <rdf:Description rdf:about="techLayer3#Verifier"/>
            </owl:members>
      </owl:AllDisjointClasses>



      <!-- ******************************* -->
      <!-- * Connection with other Layer * -->
      <!-- ******************************* -->

      <owl:Class rdf:about="techLayer4#Party">
            <rdfs:label>Party</rdfs:label>
            <rdfs:comment>An entity that sets its objectives, maintains its knowledge, and uses that knowledge to pursue its objectives in an autonomous (sovereign) manner. Natural persons and organizations are the typical examples.</rdfs:comment>
            <rdfs:subClassOf rdf:resource="techLayer4#Entity"/>
            <rdfs:isDefinedBy rdf:resource="https://glossary.trustoverip.org/#term:party"/>
      </owl:Class>



      <!-- ******************************* -->
      <!-- ********* Instance ************ -->
      <!-- ******************************* -->





</rdf:RDF>
